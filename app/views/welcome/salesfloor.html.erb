<h1>Here's Everything:</h1>

<p> Eat your Heart Out! </p>
<div class="row">
    <% @products.each do |product| %>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
        <h3><%= product.name %></h3>
        <h5><%= number_to_currency(product.price)%></h5>
        <p><%= product.description %></p>
        <h6><%= product.category %></h6>
        <%= image_tag product.avatar.url(:medium) %>

        <div class="btn-group">
        <%= link_to 'Show', product, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default"%>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"%>
       </div>
        
        <p>
            <%= form_tag('welcome/purchased') do %>
            
           <strong>How Many:</strong>
            <%= number_field_tag :quantity %>
            <span class="cant-see-me">
                <%= text_field_tag :item, product.name %>
            </span><br>
            <span class="cant-see-me">
                <%= text_field_tag :id, product.id %>
            </span><br>


            <%= submit_tag "Purchased", class: "btn btn-warning blue-text" %>

        <% end %>
        </p>


    </div>
  </div>
</div>
    <% end %>
</div>

<br>